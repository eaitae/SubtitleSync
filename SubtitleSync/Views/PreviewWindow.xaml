<Window x:Class="SubtitleSync.Views.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubtitleSync.Views"
        xmlns:vm="clr-namespace:SubtitleSync.ViewModels" d:DataContext="{d:DesignInstance Type=vm:PreviewWindowVM}"
        mc:Ignorable="d"
        Icon= "../images/icon2.ico"
        Title="Preview" Height="580" Width="540">
    
    <Window.Resources>
        <vm:MainWindowVM x:Key="vm"/>
    </Window.Resources>
    
    <Grid>
        <TextBox Text="{Binding Preview,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalScrollBarVisibility="Visible"
                 BorderThickness="0"/> 

    </Grid>
</Window>
